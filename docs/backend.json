{
  "entities": {
    "Agent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Agent",
      "type": "object",
      "description": "Represents an agent who can be assigned to missions.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The agent's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The agent's last name."
        },
        "registrationNumber": {
            "type": "string",
            "description": "The agent's service number."
        },
        "rank": {
            "type": "string",
            "description": "The agent's rank."
        },
        "contact": {
            "type": "string",
            "description": "The agent's contact details."
        },
        "address": {
            "type": "string",
            "description": "The agent's physical address."
        },
        "onLeave": {
          "type": "boolean",
          "description": "Indicates if the agent is on leave."
        }
      },
      "required": [
        "firstName",
        "lastName",
        "registrationNumber",
        "rank",
        "contact",
        "address",
        "onLeave"
      ]
    },
    "Mission": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Mission",
      "type": "object",
      "description": "Represents a mission.",
      "properties": {
        "name": {
            "type": "string",
            "description": "The name or title of the mission."
        },
        "location": {
          "type": "string",
          "description": "The location where the mission takes place."
        },
        "startDate": {
          "type": "string",
          "description": "The scheduled start time for the mission.",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "description": "The scheduled end time for the mission.",
          "format": "date-time"
        },
        "startTime": {
          "type": "string",
          "description": "The start time for the mission, if it's on a single day."
        },
        "endTime": {
          "type": "string",
          "description": "The end time for the mission, if it's on a single day."
        },
        "status": {
          "type": "string",
          "description": "The current status of the mission.",
          "enum": ["Planification", "En cours", "Terminée", "Annulée"]
        },
        "assignedAgentIds": {
          "type": "array",
          "description": "A list of agent IDs assigned to the mission.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "location",
        "startDate",
        "endDate",
        "status",
        "assignedAgentIds"
      ]
    },
    "Gathering": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Gathering",
      "type": "object",
      "description": "Represents a gathering or muster for agents.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or topic of the gathering."
        },
        "dateTime": {
          "type": "string",
          "description": "The date and time of the gathering.",
          "format": "date-time"
        },
        "assignedAgentIds": {
          "type": "array",
          "description": "A list of agent IDs assigned to the gathering.",
          "items": {
            "type": "string"
          }
        },
        "absentAgentIds": {
            "type": "array",
            "description": "A list of agent IDs marked as absent for the gathering.",
            "items": {
                "type": "string"
            }
        }
      },
      "required": [
        "name",
        "dateTime",
        "assignedAgentIds",
        "absentAgentIds"
      ]
    },
    "AppSettings": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "AppSettings",
        "type": "object",
        "description": "Stores global application settings.",
        "properties": {
            "logo": {
                "type": "string",
                "description": "The application logo, stored as a base64 data URI."
            }
        }
    },
    "Visitor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Visitor",
      "type": "object",
      "description": "Represents a visitor.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The visitor's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The visitor's last name."
        },
        "contact": {
          "type": "string",
          "description": "The visitor's contact details."
        },
        "occupation": {
          "type": "string",
          "description": "The visitor's occupation or function."
        },
        "entryTime": {
          "type": "string",
          "description": "The timestamp when the visitor was registered.",
          "format": "date-time"
        },
        "exitTime": {
          "type": "string",
          "description": "The timestamp when the visitor checked out.",
          "format": "date-time"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "contact",
        "occupation",
        "entryTime"
      ]
    },
    "ActivityLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ActivityLog",
      "type": "object",
      "description": "Represents a log of a recent activity in the application.",
      "properties": {
        "description": {
          "type": "string",
          "description": "A human-readable description of the activity."
        },
        "timestamp": {
          "type": "string",
          "description": "The time the activity occurred.",
          "format": "date-time"
        },
        "type": {
          "type": "string",
          "description": "The category of the activity.",
          "enum": ["Agent", "Mission", "Rassemblement", "Visiteur", "Général"]
        },
        "link": {
          "type": "string",
          "description": "An optional link related to the activity (e.g., /agents)."
        }
      },
      "required": ["description", "timestamp", "type"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
      "/agents/{agentId}": {
        "schema": {
          "$ref": "#/entities/Agent"
        },
        "description": "Stores information about individual agents."
      },
      "/missions/{missionId}": {
        "schema": {
          "$ref": "#/entities/Mission"
        },
        "description": "Stores details about individual missions."
      },
      "/gatherings/{gatheringId}": {
        "schema": {
            "$ref": "#/entities/Gathering"
        },
        "description": "Stores details about individual gatherings."
      },
      "/settings/app": {
        "schema": {
          "$ref": "#/entities/AppSettings"
        },
        "description": "Stores global application settings like the logo."
      },
      "/visitors/{visitorId}": {
        "schema": {
          "$ref": "#/entities/Visitor"
        },
        "description": "Stores information about registered visitors."
      },
      "/activities/{activityId}": {
        "schema": {
          "$ref": "#/entities/ActivityLog"
        },
        "description": "Stores a log of recent activities in the application."
      }
  }
}
